{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": ["text", "lcov", "cobertura"],
  "report-dir": "coverage",
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/scripts/**",
    "node_modules/**"
  ],
  "statements": 20,
  "branches": 10,
  "functions": 10,
  "lines": 20
}
